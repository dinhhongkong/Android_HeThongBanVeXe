<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="TicketViewModel"
            type="com.android.home.ticket.TicketViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_outlined"
            android:orientation="vertical"
            android:padding="15dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rdbOneWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="@{TicketViewModel.ticketType == 0}"
                    android:onCheckedChanged="@{(view, isChecked) -> TicketViewModel.setTicketTypeChoice(view, isChecked)}"
                    android:text="Một chiều"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/rdbTwoWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="@{TicketViewModel.ticketType == 1}"
                    android:onCheckedChanged="@{(view, isChecked) -> TicketViewModel.setTicketTypeChoice(view, isChecked)}"
                    android:text="Khứ hồi"
                    android:textSize="16sp"
                    android:textStyle="italic" />

            </RadioGroup>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:labelFor="@id/actStartDestination"
                        android:padding="5dp"
                        android:text="Điểm đi"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:labelFor="@id/actEndDestination"
                        android:padding="5dp"
                        android:text="Điểm đến"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                </TableRow>

                <TableRow>

                    <AutoCompleteTextView
                        android:id="@+id/actStartDestination"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="@drawable/bg_edit_text"
                        android:completionThreshold="1"
                        android:dropDownHeight="192dp"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:padding="15dp"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <AutoCompleteTextView
                        android:id="@+id/actEndDestination"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:autofillHints=""
                        android:background="@drawable/bg_edit_text"
                        android:completionThreshold="1"
                        android:dropDownHeight="192dp"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:padding="15dp"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="40dp"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:labelFor="@id/edtStart"
                        android:padding="5dp"
                        android:text="Ngày đi"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:labelFor="@id/edtEnd"
                        android:padding="5dp"
                        android:text="Ngày về"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:visibility="@{TicketViewModel.ticketType == 1 ? View.VISIBLE : View.INVISIBLE}" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/edtStart"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="@drawable/bg_edit_text"
                        android:gravity="center_vertical"
                        android:onClick="@{TicketViewModel.setStartDate}"
                        android:paddingHorizontal="15dp"
                        android:text="@{TicketViewModel.startDate}"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/edtEnd"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:autofillHints=""
                        android:background="@drawable/bg_edit_text"
                        android:gravity="center_vertical"
                        android:onClick="@{TicketViewModel.setEndDate}"
                        android:paddingHorizontal="15dp"
                        android:text="@{TicketViewModel.endDate}"
                        android:textSize="16sp"
                        android:visibility="@{TicketViewModel.ticketType == 1 ? View.VISIBLE : View.INVISIBLE}" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-25dp"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="@color/red_600"
            android:elevation="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="10dp"
            android:text="TÌM CHUYẾN XE"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</layout>